mat-form-field(style="width: 100%")
    mat-label {{label}}
    mat-select(
        '[(ngModel)]'='value'
        '[disabled]'='disabled'
        '(ngModelChange)'='onSpeciesChange($event)'
        required=''
    )
        mat-option('[value]'="0" '[disabled]'='true') Species
        mat-option(
            *ngFor='let species of speciesList; trackBy: speciesTracking',
            '[value]'='species.ind',
            '[disabled]'='species.disable'
        ) {{species.name}}
