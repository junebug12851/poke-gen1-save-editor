mat-form-field(style='width: 100%;')
    mat-label {{label}}
    input(
        matInput=''
        '[placeholder]'='label'
        type='text'
        '[(ngModel)]'='value'
        '(ngModelChange)'='doOnChange($event)'
        '[disabled]'='disabled'
    )
    button(
        'matSuffix'=''
        'aria-label'="Keyboard"
        style="width: 45px"
        mat-icon-button
        '(click)'='ks.toggle()'
    )
        span.im.im-keyboard4
