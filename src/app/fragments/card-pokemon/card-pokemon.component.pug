mat-card.ns(style='margin-bottom: 15px !important')
    .container.ns
        .row.s12
            hp-bar(
                '[curHP]'='entry.hp'
                '[maxHP]'='entry.maxHP || entry.hpStat || 1'
                '[disabled]'='disabled'
                '(input)'='updateHP($event)'
            )
        .row.s9
            name-box(
                '[value]'='entry.nickname'
            )
        .s3
            mat-label.label-tiny Level
            mat-slider(
                matInput=''
                '[min]'='1',
                '[max]'='100',
                '[thumbLabel]'='true',
                '[(ngModel)]'="entry.level"
                '(ngModelChange)'="updateData()"
                'style'="width: 100%; margin-top: -15px; margin-left: -8px;"
                '[disabled]'='disabled'
            )
        .row.s4.s-lr
            select-species(
                '[(ngModel)]'='entry.species'
                '[disabled]'='disabled'
                style='width: 100%;'
                '(ngModelChange)'="updateData()"
            )
        .s4
            select-type(
                '[(ngModel)]'='entry.type1'
                '[disabled]'='disabled'
                style='width: 100%'
            )
        .s4
            select-type(
                '[(ngModel)]'='entry.type2'
                '[disabled]'='disabled'
                style='width: 100%'
            )
        .row.s12
            mat-tab-group
                mat-tab(label="Basic", '[disabled]'='disabled')
                    .container
                        .row.s8('*ngIf'='entry.isValidPokemon !== false')
                            mat-form-field(style='width: 100%')
                                mat-label HP
                                input(
                                    matInput=''
                                    placeholder='HP'
                                    '[value]'='hpStr'
                                    '[disabled]'='true'
                                )
                        .row.s4('*ngIf'='entry.isValidPokemon === false')
                            mat-form-field(style='width: 100%')
                                mat-label Cur HP
                                input(
                                    matInput=''
                                    placeholder='Cur HP'
                                    type='number'
                                    '[(ngModel)]'='entry.hp'
                                    required=''
                                    '[disabled]'='disabled'
                                )
                        .s4('*ngIf'='entry.isValidPokemon === false')
                            mat-form-field(style='width: 100%')
                                mat-label Max HP
                                input(
                                    matInput=''
                                    placeholder='Max HP'
                                    type='number'
                                    '[(ngModel)]'='entry.maxHP'
                                    required=''
                                    '[disabled]'='disabled || entry.maxHP === undefined'
                                )
                        .s4
                            select-status(
                                '[(ngModel)]'='entry.status'
                                '[disabled]'='disabled'
                                style='width: 100%'
                            )
                        .row.s3
                            mat-form-field(style='width: 100%')
                                mat-label OT ID
                                input(
                                    matInput=''
                                    placeholder='OT ID'
                                    type='text'
                                    '[(ngModel)]'='entry.otID'
                                    required=''
                                    '[disabled]'='disabled'
                                    minlength='4'
                                    maxlength='4'
                                    pattern='[0-9a-fA-F][0-9a-fA-F][0-9a-fA-F][0-9a-fA-F]'
                                )
                        .s8
                            mat-form-field(style='width: 100%')
                                mat-label OT Name
                                input(
                                    matInput=''
                                    placeholder='OT Name'
                                    type='text'
                                    '[(ngModel)]'='entry.otName'
                                    '[disabled]'='disabled'
                                )
                        .row.s7
                            name-input-box(
                                'label'='Nickname'
                                '[(ngModel)]'='entry.nickname'
                                '[disabled]'='disabled'
                                'template'='<<t>><<c("\'s")>><br><<c("hurt by poison!")>>'
                            )
                        .s5
                            mat-form-field(style='width: 100%')
                                mat-label Catch Rate
                                input(
                                    matInput=''
                                    placeholder='Catch Rate'
                                    type='number'
                                    '[(ngModel)]'='entry.catchRate'
                                    required=''
                                    '[disabled]'='disabled'
                                )
                mat-tab(label="Moves", '[disabled]'='disabled')
                    .container(*ngFor='let move of entry.moves; let i = index')
                        .row.s4
                            select-moves(
                                '[(ngModel)]'='entry.moves[i].moveID'
                                '[disabled]'='disabled'
                            )
                        .s4
                            mat-form-field(style='width: 100%')
                                mat-label Cur PP
                                input(
                                    matInput=''
                                    placeholder='Cur PP'
                                    type='number'
                                    '[(ngModel)]'='entry.moves[i].pp'
                                    required=''
                                    '[disabled]'='disabled'
                                )
                        .s4
                            mat-form-field(style='width: 100%')
                                mat-label PP Up
                                input(
                                    matInput=''
                                    placeholder='PP Up'
                                    type='number'
                                    '[(ngModel)]'='entry.moves[i].ppUp'
                                    '[disabled]'='disabled'
                                    min='0'
                                    max='3'
                                )
                mat-tab(label="Stats", '[disabled]'='disabled')
                    .container('*ngIf'='entry.isValidPokemon !== false')
                        .s3
                            span HP: {{entry.maxHP || entry.hpStat}}
                        .s3
                            span Attack: {{entry.attack || entry.attackStat}}
                        .s3
                            span Defense: {{entry.defense || entry.defenseStat}}
                        .s3
                            span Speed: {{entry.speed || entry.speedStat}}
                        .s3
                            span Special: {{entry.special || entry.specialStat}}
                    .container('*ngIf'='entry.isValidPokemon === false')
                        .s3
                            mat-form-field(style='width: 100%')
                                mat-label HP
                                input(
                                    matInput=''
                                    placeholder='HP'
                                    type='number'
                                    '[(ngModel)]'='entry.maxHP'
                                    '[disabled]'='disabled || entry.maxHP === undefined'
                                )
                        .s3
                            mat-form-field(style='width: 100%')
                                mat-label Attack
                                input(
                                    matInput=''
                                    placeholder='Attack'
                                    type='number'
                                    '[(ngModel)]'='entry.attack'
                                    '[disabled]'='disabled || entry.attack === undefined'
                                )
                        .s3
                            mat-form-field(style='width: 100%')
                                mat-label Defense
                                input(
                                    matInput=''
                                    placeholder='Defense'
                                    type='number'
                                    '[(ngModel)]'='entry.defense'
                                    '[disabled]'='disabled || entry.defense === undefined'
                                )
                        .s3
                            mat-form-field(style='width: 100%')
                                mat-label Speed
                                input(
                                    matInput=''
                                    placeholder='Speed'
                                    type='number'
                                    '[(ngModel)]'='entry.speed'
                                    '[disabled]'='disabled || entry.speed === undefined'
                                )
                        .s3
                            mat-form-field(style='width: 100%')
                                mat-label Special
                                input(
                                    matInput=''
                                    placeholder='Special'
                                    type='number'
                                    '[(ngModel)]'='entry.special'
                                    '[disabled]'='disabled || entry.special === undefined'
                                )
                mat-tab(label="Exp", '[disabled]'='disabled')
                    .container(
                        '*ngIf'='entry.isValidPokemon !== false'
                    )
                        .s12
                            h4(
                                style="text-align: center;"
                            ) {{entry.exp}}
                        .s12
                            mat-progress-spinner(
                                'color'='primary',
                                'mode'='determinate',
                                '[value]'='entry.expPercent * 100'
                                'style'="margin: 0 auto;"
                            )
                        .s12
                            mat-slider(
                                '[min]'='entry.expStart',
                                '[max]'='entry.expEnd',
                                '[thumbLabel]'='true',
                                '[(ngModel)]'="entry.exp"
                                'style'="width: 100%;"
                                '[disabled]'='disabled'
                            )
                    .container(
                        '*ngIf'='entry.isValidPokemon === false'
                    )
                        .s12
                            mat-form-field(style='width: 100%')
                                mat-label Exp
                                input(
                                    matInput=''
                                    placeholder='Exp'
                                    type='number'
                                    '[(ngModel)]'='entry.exp'
                                    '[disabled]'='disabled'
                                )
                mat-tab(label="EV", '[disabled]'='disabled')
                    .container
                        .s6
                            mat-label HP EV
                            mat-slider(
                                    'min'='0',
                                    'max'='65535',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.hpExp"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s6
                            mat-label Attack EV
                            mat-slider(
                                    'min'='0',
                                    'max'='65535',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.attackExp"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s6
                            mat-label Defense EV
                            mat-slider(
                                    'min'='0',
                                    'max'='65535',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.defenseExp"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s6
                            mat-label Speed EV
                            mat-slider(
                                    'min'='0',
                                    'max'='65535',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.speedExp"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s6
                            mat-label Special EV
                            mat-slider(
                                    'min'='0',
                                    'max'='65535',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.specialExp"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                mat-tab(label="DV", '[disabled]'='disabled')
                    .container
                        .s3
                            mat-label HP DV
                            mat-slider(
                                    'min'='0',
                                    'max'='15',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.hpDV"
                                    'style'="width: 100%;"
                                    '[disabled]'='true'
                                )
                        .s3
                            mat-label Attack DV
                            mat-slider(
                                    'min'='0',
                                    'max'='15',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.dv.attack"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s3
                            mat-label Defense DV
                            mat-slider(
                                    'min'='0',
                                    'max'='15',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.dv.defense"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s3
                            mat-label Speed DV
                            mat-slider(
                                    'min'='0',
                                    'max'='15',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.dv.speed"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
                        .s3
                            mat-label Special DV
                            mat-slider(
                                    'min'='0',
                                    'max'='15',
                                    '[thumbLabel]'='true',
                                    '[(ngModel)]'="entry.dv.special"
                                    '(ngModelChange)'="updateData()"
                                    'style'="width: 100%;"
                                    '[disabled]'='disabled'
                                )
