  li
    a
      fa-icon(icon='save')
      |             &nbsp; Save
  li
    a
      span.im.im-floppy
      |  &nbsp; Save As...
  li
    a
      span.im.im-copy
      |  &nbsp; Save Copy As...
  li
    a
      span.im.im-reload
      |  &nbsp; Reload from Disk
  li
    a
      fa-icon(icon='times')
      |  &nbsp; Close file
  li
