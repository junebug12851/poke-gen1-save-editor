.container.wrapper
    .s12
        h5 Playtime

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Maxed
            input(
                matInput=''
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.world.playtime.maxed'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Hours
            input(
                matInput=''
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.world.playtime.hours'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Minutes
            input(
                matInput=''
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.world.playtime.minutes'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Seconds
            input(
                matInput=''
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.world.playtime.seconds'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Frames
            input(
                matInput=''
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.world.playtime.frames'
            )

    .s12
        h5 Fossil

    .xl3.l4.m8.s12
        mat-label Item Given
        select-item(
            '[(ngModel)]'='fileService.fileDataExpanded.world.fossilItemGiven'
            '[noneSelectable]'='true'
            label=''
        )

    .xl3.l4.m8.s12
        mat-label Resulting Pokemon
        select-species(
            '[(ngModel)]'='fileService.fileDataExpanded.world.fossilPkmnResult'
        )

    .s12
        h5 Debug

    .xl2.l3.m6.s12
        mat-checkbox(
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.world.debugMode'
        )
            span Debug Mode
