mat-card
    mat-card-title Pokemon
    mat-card-subtitle Player Pokemon On-Hand

mat-accordion
    mat-expansion-panel(*ngFor='let entry of entries; let i = index', hideToggle='true', '[expanded]'='i == 0')
        mat-expansion-panel-header(collapsedHeight='75px')
            card-pokemon-header(
                '[entry]'='entries[i]'
            )
        
        card-pokemon(
            '[entry]'='entries[i]'
            '(rem)'='onRem(i)'
        )

button.addBtn(
    'mat-raised-button'
    color="primary"
    '(click)'='onAdd()'
    '*ngIf'='entries.length < 6'
) +
