.container.wrapper
    .s12
        h5 Area-In

    .xl2.l3.m6.s12
        select-map-full(
            '[(ngModel)]'='fileService.fileDataExpanded.area.curMap'
            label='Current Map'
        )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Current Script
            input(
                matInput
                type='number'
                required=''
                '[(ngModel)]'='fileService.fileDataExpanded.area.curMapScript'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label UL Corner of Cur View in Tile Blocks
            input(
                matInput
                type='text'
                required=''
                '[(ngModel)]'='fileService.fileDataExpanded.area.currentTileBlockMapViewPointer'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label UL Corner Visible BG Tilemap in VRAM
            input(
                matInput
                type='text'
                required=''
                '[(ngModel)]'='fileService.fileDataExpanded.area.mapViewVRAMPointer'
            )

    .xl2.l3.m6.s12
        mat-checkbox(
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.curMapNextFrame'
        )
            span Run Current Map Script Instead

    .s12
        h5 Area-Around

    .xl2.l3.m6.s12
        mat-checkbox(
            #isNorth=''
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.mapConn.north'
        )
            span North

    .s12
        connection-item(
            '[data]'='fileService.fileDataExpanded.area.mapConnData.north'
            '[disabled]'='!isNorth.checked'
        )

    .xl2.l3.m6.s12
        mat-checkbox(
            #isEast=''
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.mapConn.east'
        )
            span East

    .s12
        connection-item(
            '[data]'='fileService.fileDataExpanded.area.mapConnData.east'
            '[disabled]'='!isEast.checked'
        )

    .xl2.l3.m6.s12
        mat-checkbox(
            #isSouth=''
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.mapConn.south'
        )
            span South

    .s12
        connection-item(
            '[data]'='fileService.fileDataExpanded.area.mapConnData.south'
            '[disabled]'='!isSouth.checked'
        )

    .xl2.l3.m6.s12
        mat-checkbox(
            #isWest=''
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.mapConn.west'
        )
            span West

    .s12
        connection-item(
            '[data]'='fileService.fileDataExpanded.area.mapConnData.west'
            '[disabled]'='!isWest.checked'
        )

    .s12
        h5 Other

    .xl2.l3.m6.s12
        mat-checkbox(
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.forceBikeRide'
        )
            span Force Bike Ride

    .xl2.l3.m6.s12
        mat-checkbox(
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.area.blackoutDest'
        )
            span To Blackout Dest

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Card Key Door X
            input(
                matInput
                type='number'
                required=''
                '[(ngModel)]'='fileService.fileDataExpanded.area.cardKeyDoorX'
            )

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Card Key Door Y
            input(
                matInput
                type='number'
                required=''
                '[(ngModel)]'='fileService.fileDataExpanded.area.cardKeyDoorY'
            )
