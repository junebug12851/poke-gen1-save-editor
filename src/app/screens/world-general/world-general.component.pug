.container.wrapper
    .s12
        h5 Maps

    .xl2.l3.m6.s12
        select-map(
            label='Last Map'
            '[(ngModel)]'='fileService.fileDataExpanded.world.general.lastMap'
        )

    .xl2.l3.m6.s12
        select-map(
            label='Last Blackout'
            '[(ngModel)]'='fileService.fileDataExpanded.world.general.lastBlackoutMap'
        )

    .s12
        h5 Options

    .xl2.l3.m6.s12
        mat-form-field(style="width: 100%")
            mat-label Text Slowness
            input(
                matInput=''
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.world.general.options.textSpeedSlowness'
            )

    .xl2.l3.m6.s12
        mat-label Battle Style
        mat-button-toggle-group(
            '[(ngModel)]'='fileService.fileDataExpanded.world.general.options.battleStyleSet'
        )
            mat-button-toggle('[value]'='false')
                | Shift
            mat-button-toggle('[value]'='true')
                | Set

    .xl2.l3.m6.s12
        mat-label Battle Animation
        mat-button-toggle-group(
            '[(ngModel)]'='fileService.fileDataExpanded.world.general.options.battleAnimOff'
        )
            mat-button-toggle('[value]'='true')
                | Off
            mat-button-toggle('[value]'='false')
                | On

    .xl2.l3.m6.s12
        mat-checkbox(
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.world.general.letterDelay.normalDelay'
        )
            span Normal Text Speed

    .xl2.l3.m6.s12
        mat-checkbox(
            style="width: 100%"
            '[(ngModel)]'='fileService.fileDataExpanded.world.general.letterDelay.dontDelay'
        )
            span Fastest Text Speed
