.row
  .col.s12
    h5 Player Basics

.row
  .input-field.col.s4.fix-margins-name
    name-input-box(
        '[maxLength]'="7"
        label="Player Name"
        '[bg]'="true"
        '[textBlack]'="true"
        'template'='<<t>><<c("! I\'ll show")>><br><<c("you how a real")>>'
        '[(ngModel)]'='fileService.fileDataExpanded.player.playerName'
    )

  .input-field.col.s6.m2
    label Player ID
    input(
        placeholder='ID'
        type='text'
        '[(ngModel)]'='fileService.fileDataExpanded.player.playerID'
        required=''
        pattern='[0-9a-fA-F][0-9a-fA-F][0-9a-fA-F][0-9a-fA-F]'
        minlength='4'
        maxlength='4'
    )

  .input-field.col.s6.m2
    label Spending Money
    input(
        placeholder='Money'
        type='number'
        '[(ngModel)]'='fileService.fileDataExpanded.player.money'
        max='999999'
        min='0'
    )

  .input-field.col.s6.m2
    label Casino Coins
    input(
        placeholder='Coins'
        type='number'
        '[(ngModel)]'='fileService.fileDataExpanded.player.coins'
        max='9999'
        min='0'
    )

  .input-field.col.s6.m2
    select-starter('[(ngModel)]'='fileService.fileDataExpanded.player.playerStarter')

