.container.wrapper
    .row.s12
        h5 Player Basics
    .row.s12
         name-input-box(
            '[maxLength]'="7"
            label="Player Name"
            '[bg]'="true"
            '[textBlack]'="true"
            'template'='<<t>><<c("! I\'ll show")>><br><<c("you how a real")>>'
            '[(ngModel)]'='fileService.fileDataExpanded.player.playerName'
        )
    .s6.m4.l3
        mat-form-field
            mat-label Player ID
            input(
                matInput=''
                placeholder='Player ID'
                type='text'
                '[(ngModel)]'='fileService.fileDataExpanded.player.playerID'
                required=''
                pattern='[0-9a-fA-F][0-9a-fA-F][0-9a-fA-F][0-9a-fA-F]'
                minlength='4'
                maxlength='4'
            )
    .s6.m4.l3
        mat-form-field
            mat-label Money
            input(
                matInput=''
                placeholder='Money'
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.player.money'
                required=''
                max='999999'
                min='0'
            )
    .s6.m4.l3
        mat-form-field
            mat-label Casino Coins
            input(
                matInput=''
                placeholder='Coins'
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.player.coins'
                required=''
                max='9999'
                min='0'
            )
    .s3
        select-starter('[(ngModel)]'='fileService.fileDataExpanded.player.playerStarter')
    .row.s12
        h5 Badges
    .row.s12
        gym-button(gymLeader='Brock' gymBadge='Boulder')
        gym-button(gymLeader='Misty' gymBadge='Cascade')
        gym-button(gymLeader='Lt. Surge' gymBadge='Thunder')
        gym-button(gymLeader='Erika' gymBadge='Rainbow')
        gym-button(gymLeader='Koga' gymBadge='Soul')
        gym-button(gymLeader='Sabrina' gymBadge='Marsh')
        gym-button(gymLeader='Blaine' gymBadge='Volcano')
        gym-button(gymLeader='Giovanni' gymBadge='Earth')
