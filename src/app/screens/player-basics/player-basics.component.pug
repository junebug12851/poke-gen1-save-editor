mat-accordion
    mat-expansion-panel('[expanded]'='true')
        mat-expansion-panel-header
            mat-panel-title Name
            mat-panel-description Player Name &amp; ID

        name-input-box(
            '[maxLength]'="7"
            label="Player Name"
            '[bg]'="true"
            '[textBlack]'="true"
            'template'='<<t>><<c("! I\'ll show")>><br><<c("you how a real")>>'
            '[(ngModel)]'='fileService.fileDataExpanded.player.basics.playerName'
        )

        mat-form-field#player-id
            mat-label Player ID
            input(
                matInput=''
                placeholder='Player ID'
                type='text'
                '[(ngModel)]'='fileService.fileDataExpanded.player.basics.playerID'
                minlength='4'
                maxlength='4'
            )

    mat-expansion-panel
        mat-expansion-panel-header
            mat-panel-title Money
            mat-panel-description Player Currency &amp; Casino Coins

        mat-form-field
            mat-label Money
            input(
                matInput=''
                placeholder='Money'
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.player.basics.money'
                max='999999'
                min='0'
            )

        mat-form-field
            mat-label Casino Coins
            input(
                matInput=''
                placeholder='Coins'
                type='number'
                '[(ngModel)]'='fileService.fileDataExpanded.player.basics.coins'
                max='9999'
                min='0'
            )
    
    mat-expansion-panel
        mat-expansion-panel-header
            mat-panel-title Starter
            mat-panel-description Player Starter

        select-starter('[(ngModel)]'='fileService.fileDataExpanded.player.basics.playerStarter')

    mat-expansion-panel
        mat-expansion-panel-header
            mat-panel-title Badges
            mat-panel-description Player Gym Badges

        gym-button(gymLeader='Brock' gymBadge='Boulder')
        gym-button(gymLeader='Misty' gymBadge='Cascade')
        gym-button(gymLeader='Lt. Surge' gymBadge='Thunder')
        gym-button(gymLeader='Erika' gymBadge='Rainbow')
        gym-button(gymLeader='Koga' gymBadge='Soul')
        gym-button(gymLeader='Sabrina' gymBadge='Marsh')
        gym-button(gymLeader='Blaine' gymBadge='Volcano')
        gym-button(gymLeader='Giovanni' gymBadge='Earth')
